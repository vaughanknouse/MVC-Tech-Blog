<div class="row">
  <div class="col-md-6">
    <p class='text-success fs-1 fw-bold'>Sign Up</p>


<div class='card mt-5 center-card border-0'>
  <div class='card-body col-md-6'>
    <!-- Registration form -->
    <form>
      <div class='form-group'>
        <label for='username-register'>Username</label>
        <!-- Input field for the username -->
        <input class='form-control' id='username-register' />
      </div>
      <div class='form-group'>
        <label for='password-register'>Password</label>
        <!-- Input field for the password -->
        <input type='password' class='form-control' id='password-register' />
      </div>
      <!-- Submit button for the registration form -->
      <button type='click' class='btn btn-success register-btn'>Sign Up</button>
    </form>
    <!-- Link to the login page -->
    <a href='/login'>Login Instead</a>
  </div>
</div>

<!-- Link to the JavaScript file for handling registration -->
<script src='/js/register.js'></script>