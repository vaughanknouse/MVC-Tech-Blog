<section>
  <!-- Main container for the page content -->
  <div class='container mt-5 col-md-9'>
    <div class='row justify-content-center'>
      <div class='col-md-10'>
        <!-- Button to create a new post -->
        <div class='d-flex justify-content-center mb-5'>
          <a
            class='btn btn-outline-secondary'
            type='button'
            id='button-addon2'
            href='/post'
          >Create New Post</a>
        </div>

        <!-- Loop through each post in the 'posts' array -->
        {{#each posts}}
          <div class='card mb-4'>
            <div class='d-none' id='post-id'>{{this.id}}</div>
            <div class='card-body'>
              <!-- Post title -->
              <div class='d-flex justify-content-between align-items-center'>
                <h5 class='card-title'>{{title}}</h5>
                <!-- Post edit/delete link -->
                <a
                  class='btn-sm btn-outline-secondary edit'
                  type='button'
                  id='button-addon2'
                  href='/edit/{{id}}'
                >
                  Edit/Delete
                </a>
              </div>
              <!-- Post content -->
              <p class='card-content'>{{content}}</p>
              <!-- Footer with posting username and date created -->
              <footer class='blockquote-footer'>Posted by
                {{user.username}}
                on
                {{format_date date_created}}</footer>

              <!-- Conditional block to show comments section if comments exist -->
              {{#if comments.length}}
                <footer>
                  <!-- Button to toggle visibility of comments -->
                  <div class='d-flex justify-content-end'>
                    <button
                      class='btn-sm btn-outline-secondary mt-3'
                      type='button'
                      data-toggle='collapse'
                      data-target='#collapseExample{{@index}}'
                      aria-expanded='false'
                      aria-controls='collapseExample{{@index}}'
                    >
                      Comments
                    </button>
                  </div>
                  <!-- Collapsible section for comments -->
                  <div class='collapse' id='collapseExample{{@index}}'>
                    <!-- Loop through each comment associated with the post -->
                    {{#each comments}}
                      <div class='card-sm card-body'>
                        {{content}}<span
                          class='blockquote-footer'
                        >{{user.username}}
                          on
                          {{format_date date_created}}</span>
                      </div>
                    {{/each}}
                    <!-- Input group for adding a new comment -->
                    <div class='input-group mt-3'>
                      <input
                        type='text'
                        class='comment-content form-control'
                        placeholder='Leave a comment here'
                        aria-label="Recipient's username"
                        aria-describedby='button-addon2'
                      />
                      <div class='input-group-append'>
                        <button
                          class='comment-btn btn-sm btn-outline-secondary'
                          type='button'
                          id='button-addon2'
                        >Comment</button>
                      </div>
                    </div>
                  </div>
                </footer>
              {{/if}}

              <!-- Conditional block for adding a comment if no comments exist -->
              {{#unless comments.length}}
                <div class='input-group mt-3'>
                  <input
                    type='text'
                    class='comment-content form-control'
                    placeholder='Leave a comment here'
                    aria-label="Recipient's username"
                    aria-describedby='button-addon2'
                  />
                  <div class='input-group-append'>
                    <button
                      class='comment-btn btn-sm btn-outline-secondary'
                      type='button'
                      id='button-addon2'
                    >Comment</button>
                  </div>
                </div>
              {{/unless}}
            </div>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</section>

<!-- Link to external JavaScript file for handling comment functionality -->
<script src='/js/comment.js'></script>