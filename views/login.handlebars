<div class="row">
  <div class="col-md-6">
    <p class='text-primary fs-1 fw-bold'>Login</p>

<div class='card mt-5 center-card border-0'>
  <!-- Main container for the login form -->
  <div class='card-body col-md-6'>
    <!-- Form for user login -->
    <form class='form login-form'>
      <div class='form-group'>
        <label for='username-register'>Username</label>
        <!-- Input field for the username -->
        <input class='form-control' id='username-login' />
      </div>
      <div class='form-group'>
        <label for='password-login'>Password</label>
        <!-- Password input -->
        <input type='password' class='form-control' id='password-login' />
      </div>
      <!-- Login button -->
      <button type='click' class='btn btn-primary login-btn'>Login</button>
    </form>
    <!-- Link to the registration page for new users -->
    <a href='/register'>Sign Up Instead</a>
  </div>
</div>

<!-- Link to the JavaScript file for login functionality -->
<script src='/js/login.js'></script>